{
  "manifest_version": 2,

  "name": "Pocket Vim",
  "description": "This extension Enables vim-mode on sites like Github Gists, JS Bin, CodePen and others",
  "version": "1.0",
  "permissions": [
    "tabs"
  ],
  "content_scripts": [{
    "matches": ["http://jsbin.com/*", "http://cssdeck.com/*", "http://codepen.io/pen/*"],
    "js": ["vimloader.js"]
  }],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "codemirror.js",
    "lib/CodeMirror/keymap/vim.js"
  ]
}
